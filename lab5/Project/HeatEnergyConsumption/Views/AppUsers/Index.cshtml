@model HeatEnergyConsumption.ViewModels.UserViewModels.UsersViewModel

@{
    ViewData["Title"] = "Пользователи";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Email
            </th>
            <th>
                Роль
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UsersRoles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.User.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@item.User.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>