@model IEnumerable<HeatEnergyConsumption.Models.Manager>

@{
	ViewData["Title"] = "Руководители";
}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8"/>
		<title>@ViewData["Title"]</title>
		<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
	</head>
	<body>
		<h2 class="header">@ViewData["Title"]</h2>
		<br/>

		<table class="table">
			<thead>
				<tr>
					<th>ID</th>
					<th>Фамилия</th>
					<th>Имя</th>
					<th>Отчество</th>
					<th>Номер телефона</th>
				</tr>
			</thead>
			<tbody>
				@foreach (Manager record in Model)
				{
					<tr>
						<td>@record.Id</td>
						<td>@record.Surname</td>
						<td>@record.Name</td>
						<td>@record.MiddleName</td>
						<td>@record.PhoneNumber</td>
					</tr>
				}
			</tbody>
		</table>
	</body>
</html>